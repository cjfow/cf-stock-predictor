<Window x:Class="StockPredictorUI.Views.ChartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockPredictorUI.Views"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:viewmodels="clr-namespace:StockPredictorUI.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:ChartViewModel}"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="ChartView" Height="800" Width="1400"
        MouseDown="Window_MouseDown">

    <!-- The main border with a drop shadow effect -->
    <Border x:Name="BackgroundImageBorder" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect/>
        </Border.Effect>

        <!-- Gradient overlay inside the border -->
        <Border x:Name="GradientOverlayBorder" 
                CornerRadius="10"
                BorderThickness="1"
                Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" Offset="1"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.7"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" Offset="0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0.1"/>
                    <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <!-- Main grid container -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <!-- Allowing for more flexibility in space allocation -->
                </Grid.RowDefinitions>

                <!-- Title and close button section -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="CFStockPredictor"
                               Foreground="{StaticResource plainTextColor1}"
                               FontSize="12"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <!-- Close button with custom style -->
                    <Button x:Name="CloseButton"
                            BorderThickness="0"
                            Content="X"
                            Foreground="{StaticResource plainTextColor1}"
                            FontSize="10"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="OnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" 
                                        Value="{StaticResource closeButton}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" 
                                                Value="{StaticResource closeButtonHover}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" 
                                        Height="20"
                                        CornerRadius="8"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- StackPanel to contain PlotView and make sure PlotView is centered -->
                <oxy:PlotView Model="{Binding MyPlotModel}" 
                              Height="750"
                              Width="1350"
                              Grid.Row="1"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Background="{StaticResource plainTextColor1}"/>
            </Grid>
        </Border>
    </Border>
</Window>
