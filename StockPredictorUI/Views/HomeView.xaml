<Window x:Class="StockPredictorUI.Views.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockPredictorUI.Views" 
        xmlns:viewmodels="clr-namespace:StockPredictorUI.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
        mc:Ignorable="d"
        Title="CFStockPredictor" Height="600" Width="800"
        MinHeight="600" MinWidth="800"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Border x:Name="BackgroundImageBorder" 
            CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect/>
        </Border.Effect>
        <Border.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" 
                        Stretch="Fill"/>
        </Border.Background>

        <Border x:Name="GradientOverlayBorder" 
                CornerRadius="10"
                BorderThickness="1"
                Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" 
                                     EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}"
                                  Offset="1"/>
                    <GradientStop Color="{StaticResource winBorderColor2}"
                                  Offset="0.7"/>
                    <GradientStop Color="{StaticResource winBorderColor3}"
                                  Offset="0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,1">
                    <GradientStop Color="{StaticResource primaryBackColor1}"
                                  Offset="0.1"/>
                    <GradientStop Color="{StaticResource primaryBackColor2}"
                                  Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="CFStockPredictor"
                               Foreground="{StaticResource plainTextColor1}"
                               FontSize="12"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <Button x:Name="MinimizeButton"
                            Content="-"
                            BorderThickness="0"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Command="{Binding MinimizeCommand}"
                            Foreground="{StaticResource plainTextColor1}">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="{StaticResource titleColor1}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="{StaticResource panelOverColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="20"
                                        Height="20"
                                        CornerRadius="8"
                                        Background="{TemplateBinding Background}">
                                    
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="CloseButton"
                            BorderThickness="0"
                            Content="X"
                            Foreground="{StaticResource plainTextColor1}"
                            FontSize="10"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Command="{Binding CloseCommand}">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" 
                                        Value="{StaticResource closeButton}"/>
                                
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="{StaticResource closeButtonHover}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" 
                                        Height="20"
                                        CornerRadius="8"
                                        Background="{TemplateBinding Background}">
                                    
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="450"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,20,0,30">

                    <Image x:Name="LogoImage"
                           Source="/Resources/Images/stock.png"
                           Width="95"
                           Height="95"/>

                    <TextBlock Text="Welcome"
                               Foreground="{StaticResource plainTextColor1}"
                               FontSize="24"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Select a stock and time frame for the prediction model."
                               Foreground="{StaticResource plainTextColor2}"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               TextWrapping="WrapWithOverflow"
                               TextAlignment="Center"
                               Margin="0,5,0,0"/>

                    <TextBlock Text="Enter Fund Ticker"
                               FontSize="13"
                               FontFamily="Montserrat"
                               FontWeight="Medium"
                               TextAlignment="Center"
                               Foreground="{StaticResource plainTextColor2}"
                               Margin="140,40,150,0"/>

                    <TextBox x:Name="TickerTextBox"
                             Text="{Binding StockTicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             FontSize="14"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="{StaticResource plainTextColor1}"
                             CaretBrush="{StaticResource titleColor2}"
                             BorderBrush="{StaticResource titleColor1}"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="100,6,100,0"
                             CharacterCasing="Upper"
                             Padding="22,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Resources/Images/arrow.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
                        </TextBox.Background>

                    </TextBox>

                    <TextBlock Text="Select Prediction Horizon"
                               FontSize="13"
                               FontFamily="Montserrat"
                               FontWeight="Medium"
                               TextAlignment="Center"
                               Foreground="{StaticResource plainTextColor2}"
                               Margin="45,30,50,0"/>

                    <Slider x:Name="PredictionHorizonSlider"
                            Minimum="1"
                            Maximum="5"
                            SmallChange="1" 
                            LargeChange="1"
                            TickFrequency="1" 
                            IsSnapToTickEnabled="True"
                            IsMoveToPointEnabled="True"
                            Width="300" 
                            Height="28"
                            Margin="0,5,0,0"
                            TickPlacement="BottomRight"
                            HorizontalAlignment="Center"
                            Value="{Binding PredictionHorizon, Mode=TwoWay}"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        
                        <TextBlock Text="1 Year"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource plainTextColor1}"
                                   Margin="0,-10,35,0"
                                   HorizontalAlignment="Center"/>
                        
                        <TextBlock Text="2 Years"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource plainTextColor1}"
                                   Margin="0,-10,35,0"
                                   HorizontalAlignment="Center"/>
                        
                        <TextBlock Text="3 Years"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource plainTextColor1}"
                                   Margin="0,-10,35,0"
                                   HorizontalAlignment="Center"/>
                        
                        <TextBlock Text="4 Years"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource plainTextColor1}"
                                   Margin="0,-10,35,0"
                                   HorizontalAlignment="Center"/>
                        
                        <TextBlock Text="5 Years"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource plainTextColor1}"
                                   Margin="0,-10,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Button x:Name="GenerateForecastButton"
                            BorderThickness="0"
                            Content="Generate Forecast"
                            Foreground="{StaticResource plainTextColor1}"
                            FontSize="14"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Margin="0,50,0,0"
                            Command="{Binding OpenChartCommand}">

                        <Button.Style>
                            <Style TargetType="Button">
                                
                                <Setter Property="Background" 
                                        Value="{StaticResource panelColor}"/>
                                <Style.Triggers>
                                    
                                    <Trigger Property="IsMouseOver" 
                                             Value="True">
                                        
                                        <Setter Property="Background" 
                                                Value="{StaticResource comboBoxColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                
                                <Border Width="200" 
                                        Height="45"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="View Ticker List"
                            FontSize="12"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Foreground="White"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,35,0,0"
                            Command="{Binding OpenTickerListCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>

