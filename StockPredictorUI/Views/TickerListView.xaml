<Window x:Class="StockPredictorUI.Views.TickerListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockPredictorUI.Views" 
        xmlns:viewmodels="clr-namespace:StockPredictorUI.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:TickerListViewModel}"
        mc:Ignorable="d"
        Title="TickerListView" Height="300" Width="260"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Border x:Name="BackgroundImageBorder" 
            CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect/>
        </Border.Effect>


        <Border x:Name="GradientOverlayBorder" 
                CornerRadius="10"
                BorderThickness="1"
                Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" 
                                     EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" 
                                  Offset="1"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" 
                                  Offset="0.7"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" 
                                  Offset="0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" 
                                     EndPoint="1,1">
                    <GradientStop Color="{StaticResource primaryBackColor1}" 
                                  Offset="0.1"/>
                    <GradientStop Color="{StaticResource primaryBackColor2}" 
                                  Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="CFStockPredictor"
                               Foreground="{StaticResource plainTextColor1}"
                               FontSize="12"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <Button x:Name="CloseButton"
                            BorderThickness="0"
                            Content="X"
                            Foreground="{StaticResource plainTextColor1}"
                            FontSize="10"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="OnClose">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" 
                                        Value="{StaticResource closeButton}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" 
                                             Value="True">
                                        <Setter Property="Background" 
                                                Value="{StaticResource closeButtonHover}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" 
                                        Height="20"
                                        CornerRadius="8"
                                        Background="{TemplateBinding Background}">

                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="240"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,20,0,20">

                    <TextBlock Text="Valid tickers for the prediction model."
                               Foreground="{StaticResource plainTextColor2}"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               TextWrapping="WrapWithOverflow"
                               TextAlignment="Center"
                               Margin="0,5,0,0"/>

                    <Grid Width="240" 
                          Grid.Row="2" 
                          Margin="0,20,0,20">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
 
                            <ColumnDefinition Width="20"/>

                            <ColumnDefinition Width="*" />
                            
                        </Grid.ColumnDefinitions>

                        <ListBox ItemsSource="{Binding ETFList}"
                                 FontSize="12"
                                 FontFamily="Montserrat"
                                 Foreground="White"
                                 Background="Transparent"
                                 BorderBrush="Transparent"
                                 SelectionMode="Single"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"/>

                        <ListBox ItemsSource="{Binding IndexFundList}"
                                 FontSize="12"
                                 FontFamily="Montserrat"
                                 Foreground="White"
                                 Background="Transparent"
                                 BorderBrush="Transparent"
                                 SelectionMode="Single"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Grid.Column="2"/>
                    </Grid>


                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
